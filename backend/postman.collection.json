          "name": "Get question by id",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{baseUrl}}/api/v1/questions/{{questionId}}", "host": ["{{baseUrl}}"], "path": ["api","v1","questions","{{questionId}}"] }
          }
        },
        {
          "name": "Update question",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": { "mode": "raw", "raw": "{ \"text\": \"Updated Q text\" }" },
            "url": { "raw": "{{baseUrl}}/api/v1/questions/{{questionId}}", "host": ["{{baseUrl}}"], "path": ["api","v1","questions","{{questionId}}"] }
          }
        },
        {
          "name": "Archive (delete) question",
          "request": {
            "method": "DELETE",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{baseUrl}}/api/v1/questions/{{questionId}}", "host": ["{{baseUrl}}"], "path": ["api","v1","questions","{{questionId}}"] }
          }
        }
      ]
    },
    {
      "name": "Attempts",
      "item": [
        {
          "name": "Start attempt (student)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }, { "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{ \"quizCode\": \"{{quizCode}}\" }" },
            "url": { "raw": "{{baseUrl}}/api/v1/attempts/start", "host": ["{{baseUrl}}"], "path": ["api","v1","attempts","start"] }
          }
        },
        {
          "name": "Submit attempt",
          "request": {
            "method": "POST",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }, { "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"answers\": [\n    { \"questionId\": \"{{questionId1}}\", \"choiceId\": \"{{choiceId1}}\" },\n    { \"questionId\": \"{{questionId2}}\", \"choiceId\": \"{{choiceId2}}\" }\n  ]\n}"
