    },
    {
      "name": "Upload",
      "item": [
        {
          "name": "Upload Excel (faculty)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "file", "type": "file", "src": "" }
              ]
            },
            "url": { "raw": "{{baseUrl}}/api/v1/upload/excel", "host": ["{{baseUrl}}"], "path": ["api","v1","upload","excel"] }
          },
          "description": "Use form-data key 'file'. Select a local .xlsx/.xls/.csv file in Postman UI."
        }
      ]
    }
  ]
}
